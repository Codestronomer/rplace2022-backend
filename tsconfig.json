{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
	},
	"lib": [
		"es6"
	],
	"exclude": [
		"node_modules"
	],
	"include": [
		"**/*"
	]
}